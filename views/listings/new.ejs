<% layout('layouts/boilerplate') %>
<body>
    <br>
  <h1>Create a New Listing</h1>
  <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
    <div class="row">
      <div class="col-8 offset-2">
        
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input name="listing[title]" placeholder="Enter a catchy title" type="text" class="form-control" required>
          <div class="valid-feedback">Title looks Good!!</div>
        </div>

        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea name="listing[description]" placeholder="Enter description" class="form-control" required></textarea>
        <div class="invalid-feedback">Please enter a valid description</div>
        </div>
         <div class="mb-3">
          <label for="image" class="form-label">Upload Listing Image</label>
          <input name="listing[image]" type="file" class="form-control">
        </div>

        <div class="mb-3">
          <label for="location" class="form-label">Location</label>
          <input name="listing[location]" placeholder="Enter location" type="text" class="form-control" required>
        <div class="invalid-feedback">location should be valid</div>
        </div>

        <!-- Price & Country Row -->
        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input name="listing[price]" placeholder="Enter price" type="number" class="form-control" required>
          <div class="invalid-feedback">price should be valid</div>
          </div>
          <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input name="listing[country]" placeholder="Enter country" type="text" class="form-control" required>
          <div class="invalid-feedback">country should be valid</div>
          </div>
        </div>

        <!-- Rating & Reviews Row -->
        <!-- <div class="row">
          <div class="mb-3 col-md-4">
            <label for="rating" class="form-label">Rating</label>
            <input name="listing[rating]" placeholder="Enter rating" class="form-control" >
          <div class="invalid-feedback">Enter valid rating</div>
          </div>
          <div class="mb-3 col-md-8">
            <label for="reviews" class="form-label">Reviews</label>
            <input name="listing[reviews]" placeholder="Enter reviews" type="text" class="form-control" >
          <div class="invalid-feedback">Enter valid review</div>
          </div>
        </div> -->
        <button class="btn btn-primary">Add</button>
  <br><br>
      </div>
    </div>
  </form>
</body>
